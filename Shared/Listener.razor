Centered="true"
ShowCloseButton="false">
	<BodyTemplate>

		<div>Try @(_testDef.UsedTries+1) / @_testDef.Numtries</div>
		<div>
			I heard: @_notes
		</div>
		<div id="vf"></div>
		
		@if(_resultIcon != null){
						<HxIcon Icon = "@_resultIcon" CssClass = "display-3" />
								}
		<HxProgress>
    <HxProgressBar Label="" MaxValue=@Max Value=@Time />
</HxProgress>

	</BodyTemplate>
	<FooterTemplate>
		<HxButton Text="Skip" OnClick="HandleClose" Color="ThemeColor.Primary" />
	</FooterTemplate>
</HxModal>



